<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="2dp"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/box"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:id="@+id/volume_MAIN_2"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_centerVertical="true"
                android:id="@+id/holder2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="20sp"
                        android:textStyle="bold"

                        android:textColor="#000"
                        android:textSize="22sp"
                        android:text="2nd Exercise"
                        android:id="@+id/vex_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_marginLeft="20sp"
                        android:textColor="#000"
                        android:layout_below="@id/vex_2"
                        android:textSize="14sp"
                        android:text="Sets-3 Reps-8"
                        android:id="@+id/vex_2_snr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>

                </RelativeLayout>

            </FrameLayout>
            <EditText
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/myLoad"
                android:layout_width="50dp"
                android:layout_height="35dp"></EditText>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>