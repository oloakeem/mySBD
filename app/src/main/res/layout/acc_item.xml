<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="40dp"
           >

            <ImageView
                android:padding="1dp"
                android:src="@drawable/isolation_back"
                android:id="@+id/accesory_Image"
                android:layout_centerVertical="true"
                android:background="@drawable/item_circle"
                android:layout_width="80dp"
                android:layout_height="80dp"></ImageView>
        </androidx.cardview.widget.CardView>
<View
    android:layout_marginHorizontal="5dp"
    android:id="@+id/poker"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@id/view2"
    android:background="#40000000"
    android:layout_width="40dp"
    android:layout_height="2dp"></View>
        <FrameLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/poker"
            android:id="@+id/accesory_Frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/accesory_Item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <TextView
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="3 Sets 12 Reps"
            android:layout_below="@id/accesory_Item1"
            android:id="@+id/accesory_Item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>

    </FrameLayout>
</LinearLayout>