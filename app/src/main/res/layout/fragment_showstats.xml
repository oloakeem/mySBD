<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/StatsCard"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:background="#D70B0B0B"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="Name:"
                android:textStyle="bold"
                android:layout_margin="15dp"
                android:id="@+id/statslistX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:textSize="24sp"
                android:hint="Name"
                android:layout_toRightOf="@id/statslistX"
                android:layout_marginTop="15dp"
                android:id="@+id/statslist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_below="@id/defS"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:hint="Squat"
                android:textSize="24sp"
                android:id="@+id/cardSquat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:textStyle="bold"

                android:id="@+id/defS"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Squat"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="Bench"
                android:layout_centerInParent="true"
                android:id="@+id/cardBenchX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_below="@id/cardBenchX"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:hint="Bench"
                android:textSize="24sp"
                android:layout_centerInParent="true"
                android:id="@+id/cardBench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textStyle="bold"
                android:text="Dead"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:id="@+id/cardDeadX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_below="@id/cardDeadX"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:hint="Dead"
                android:textSize="24sp"
                android:id="@+id/cardDead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/StatsCard"
        android:textColor="@color/colorWhite"
        android:background="@drawable/new_round_button"
        android:layout_gravity="bottom"
        android:id="@+id/newButton"
        android:text="Continue with to program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
</RelativeLayout>